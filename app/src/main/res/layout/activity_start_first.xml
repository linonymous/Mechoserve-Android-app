<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mechoserve.myshare.Start1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textmecho"
        android:textColor="#1A237E"
        android:textStyle="bold"
        android:text="MechoServe"
        android:textSize="55dp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/bike"
        android:id="@+id/bike"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/textmecho"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET YOUR BIKE SERVICED....
           AT YOUR HOME ...."
        android:layout_below="@+id/bike"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textStyle="italic|bold"
        android:id="@+id/bike_text"
        />

    <Button
        android:id="@+id/startfirstnext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/temp_button"
        android:layout_below="@+id/bike_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
