<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ContactUs">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_phone"
        android:text="Call Us At"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_phone_no"
        android:text="+91 9881-067-067"
        android:autoLink="phone"
        android:linksClickable="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/contactus_phone"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_mail"
        android:text="Drop Us a Mail"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contactus_phone_no"
        android:textSize="20dp"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_mail_id"
        android:text="info@mechoserve.com"
        android:autoLink="email"
        android:linksClickable="true"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/contactus_mail"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_twitter"
        android:text="Follow Us on Twitter"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contactus_mail_id"
        android:textSize="20dp"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_twitter_id"
        android:text="twitter.com/mechoserve"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/contactus_twitter"
        android:autoLink="web"
        android:linksClickable="true"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_facebook"
        android:text="Like Us on Facebook"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/contactus_twitter_id"
        android:textSize="20dp"
        android:layout_marginTop="30dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contactus_facebook_id"
        android:text="www.facebook.com/mechoserve"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@+id/contactus_facebook"
        android:autoLink="web"
        android:linksClickable="true"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>
