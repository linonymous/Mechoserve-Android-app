<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mechoserve.myshare.Start2">


    //Minute testing

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/minute"
        android:src="@drawable/minute"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We were travelling, Suddenly our bike broke down in the middle of the road. Although it was just a minute choke problem we had to spend almost two hours to get the repair done."
        android:textColor="#424242"
        android:id="@+id/minute_text"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="16dp"
        android:layout_toRightOf="@+id/minute"

        />


    //Make testing

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/make"
        android:layout_below="@+id/minute_text"
        android:src="@drawable/make"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/minute_text"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="That moment triggered the idea of doorstep bike servicing in our minds. We thought, why not make it simple."
        android:textColor="#424242"
        android:id="@+id/make_text"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/make"
        android:layout_below="@+id/minute"
        />


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/start"
        android:layout_below="@+id/make"
        android:src="@drawable/start"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="That was the beginning of Mechoserve.com and the beginning of a new era in the field of online bike maintenance and services"
        android:textColor="#424242"
        android:id="@+id/start_text"
        android:textSize="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/minute"
        android:layout_below="@+id/make"
        />

    <Button
        android:id="@+id/startsecondnext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Next"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/temp_button"/>
</RelativeLayout>
