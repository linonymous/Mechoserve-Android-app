<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.als.mechoservemain1.UserProfile">

        <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/img3"
        android:id="@+id/img1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MechoServe"
            android:textSize="43dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/img1"
            android:id="@+id/mechoserve"
            android:layout_marginTop="10dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:typeface="serif"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Your Bike Serviced"
            android:layout_marginTop="20dp"
            android:id="@+id/line1"
            android:layout_below="@+id/mechoserve"
            android:textSize="25dp"
            android:textStyle="italic"

            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At Your Home"
            android:textSize="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/line1"
            android:id="@+id/line2"
            android:typeface="sans"
            android:textStyle="italic"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/s1"
            android:id="@+id/s1"
            android:layout_below="@+id/line2"
            android:layout_marginTop="20dp"
            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/s2"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/line2"
            android:layout_alignParentRight="true"
            android:id="@+id/s2"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/s3"
            android:layout_below="@+id/s2"
            android:id="@+id/s3"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@+id/s3"
            android:textSize="18dp"
            android:id="@+id/bookappointment"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:text="Book Appointment"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

        <ListView
        android:id="@+id/navList"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#E3F2FD"
        android:textAlignment="center"/>

</android.support.v4.widget.DrawerLayout>